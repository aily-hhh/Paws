<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paws" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/darkBeige</item>
        <item name="colorSecondaryVariant">@color/secondaryPrimary</item>
        <item name="colorOnSecondary">@color/darkBrown</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="android:windowBackground">@drawable/background_night</item>
    </style>
    <style name="Theme.Paws.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Paws.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Paws.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>