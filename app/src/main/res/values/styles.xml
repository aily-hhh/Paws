<resources>
    <style name="MyButton" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/lightGreen</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="elevation">30dp</item>
    </style>

    <style name="MyAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/superLightGreen</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textColorAlertDialogListItem">@color/darkBeige</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/darkBrown</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/green</item>
        <item name="hintTextColor">@color/darkGreen</item>
        <item name="endIconTint">@color/green</item>
        <item name="startIconTint">@color/green</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="backgroundColor">@color/lightBeige</item>
    </style>
</resources>