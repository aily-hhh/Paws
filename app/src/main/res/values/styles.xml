<resources>
    <style name="MyButton" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/lightGreen</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="elevation">30dp</item>
    </style>

    <style name="MyAlertDialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/lightBeige</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textColorPrimary">@color/darkBrown</item>
        <item name="colorPrimary">@color/darkBrown</item>
        <item name="textColorAlertDialogListItem">@color/darkGreen</item>
        <item name="itemTextColor">@color/darkGreen</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/green</item>
        <item name="hintTextColor">@color/darkGreen</item>
        <item name="endIconTint">@color/green</item>
        <item name="startIconTint">@color/green</item>
    </style>

    <style name="MyFloatActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="colorOnSecondary">@color/darkBrown</item>
        <item name="android:backgroundTint">@color/darkGreen</item>
        <item name="tint">@color/white</item>
    </style>
</resources>