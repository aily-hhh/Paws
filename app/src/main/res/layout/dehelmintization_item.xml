<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dehelmintizationContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGreen">

            <TextView
                android:id="@+id/dateDehelmintizationList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/date"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameDescript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/timeDescript"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="2dp"
                android:layout_marginStart="6dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/nameitem"
                android:textSize="10sp"
                android:textStyle="normal"
                android:textColor="@color/green"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/nameDehelmintizationItem"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameDescript"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/nameitem"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/timeDescript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/nameDehelmintizationItem"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/time_date"
                android:textSize="10sp"
                android:textStyle="normal"
                android:textColor="@color/green"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/timeDehelmintizationItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeDescript"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/nameDehelmintizationItem"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/time"
                android:textSize="10sp"
                android:textStyle="normal"
                tools:ignore="SmallSp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/manufacturerDescript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_toStartOf="@+id/doseDescript"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/manufacturer_item"
                android:textSize="10sp"
                android:textStyle="normal"
                android:textColor="@color/green"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/manufacturerDehelmintizationItem"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manufacturerDescript"
                android:fontFamily="monospace"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:text="@string/manufacturer_item"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/doseDescript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/manufacturerDehelmintizationItem"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/dose_item"
                android:textSize="10sp"
                android:textColor="@color/green"
                android:textStyle="normal"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/doseDehelmintizationItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doseDescript"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/manufacturerDehelmintizationItem"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/dose_item"
                android:textSize="10sp"
                android:textStyle="normal"
                tools:ignore="SmallSp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/veterinarianDescript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:padding="6dp"
                android:text="@string/veterinarian_item"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/darkGreen" />

            <TextView
                android:id="@+id/veterinarianDehelmintizationItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/veterinarianDescript"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="6dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/veterinarian_item"
                android:textSize="14sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>